{% extends 'base.html.twig' %}

{% block title %}Nos Produits - Abeille Bouvillonne
{% endblock %}

{% block bootstrap %}{% endblock %}

{% block uniqueCSS %}
	<link rel="stylesheet" href=" {{asset('assets/css/events.css')}}">
{% endblock %}

{% block body %}
	<section class="events">

		{% for event in events %}

			<section class="event-card">
				<h2 class="title">
					{{event.name}}
				</h2>
				<p class="desc">
					{{event.description|slice(0,50)}}
				</p>
				<figure>
					<img class="img-produit" src="{{ asset('images/' ~ event.image) }}"/>
				</figure>
				<article class="cta">
					<p>Du
						{{event.openDate ? event.openDate|date('d-m-Y') : '' }}</p>
					<p>au
						{{event.closeDate ? event.closeDate|date('d-m-Y') : '' }}</p>
					<a href="{{path('event_show', {'id':event.id})}}" class="btn btn-centre">En savoir +</a>
				</article>
			</section>
		{% endfor %}

	</section>
	<section class="centre">
		<a href="{{path('home')}}" class="btn btn-centre">Revenir Ã  l'accueil</a>
	</section>
{% endblock %}
