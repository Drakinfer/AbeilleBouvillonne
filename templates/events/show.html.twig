{% extends 'base.html.twig' %}

{% block title %}
	{{event.name}}
	- Abeille Bouvillonne
{% endblock %}

{% block uniqueCSS %}
	<link rel="stylesheet" href="{{asset('assets/css/events.css')}}">
{% endblock %}

{% block body %}

	<section id="event">
		<img src="{{asset('images/' ~ event.image)}}" alt="{{event.name}}" id="event-img">
		<article>
			<h2>{{event.name}}</h2>
			<p>{{event.description}}</p>
			<p>Date d'ouverture :
				{{ event.openDate ? event.openDate|date('d-m-Y') : '' }}</p>
			<p>Date de fermeture :
				{{ event.closeDate ? event.closeDate|date('d-m-Y') : '' }}</p>
			<p>Horaires :
				{{event.hours}}</p>
			<p>Adresse :</p>
			<p>{{event.adress}}</p>
			<p>{{event.postalcode}}</p>
			<p>{{event.city}}</p>
			<p>{{event.country}}</p>
		</article>
	</section>

	{% if is_granted('ROLE_ADMIN') %}
		<a href="{{ path('events_edit', {'id': event.id}) }}" class="btn">Modifier</a>

		{{ include('events/_delete_form.html.twig') }}
	{% endif %}
	<a href="{{path('home')}}" class="btn">Revenir Ã  l'accueil</a>
{% endblock %}
