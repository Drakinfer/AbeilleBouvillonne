{% extends 'base.html.twig' %}

{% block title %}
	{{event.name}}
	- Abeille Bouvillonne
{% endblock %}

{% block body %}
	<h1>Events</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ event.id }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td>{{ event.image }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ event.name }}</td>
			</tr>
			<tr>
				<th>OpenDate</th>
				<td>{{ event.openDate ? event.openDate|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>CloseDate</th>
				<td>{{ event.closeDate ? event.closeDate|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Hours</th>
				<td>{{ event.hours }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ event.description }}</td>
			</tr>
			<tr>
				<th>Adress</th>
				<td>{{ event.adress }}</td>
			</tr>
			<tr>
				<th>Postalcode</th>
				<td>{{ event.postalcode }}</td>
			</tr>
			<tr>
				<th>City</th>
				<td>{{ event.city }}</td>
			</tr>
			<tr>
				<th>Country</th>
				<td>{{ event.country }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('events_index') }}">back to list</a>

	{% if is_granted('ROLE_ADMIN') %}
		<a href="{{ path('events_edit', {'id': event.id}) }}">edit</a>
	{% endif %}


	{{ include('events/_delete_form.html.twig') }}
{% endblock %}
