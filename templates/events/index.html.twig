{% extends 'base.html.twig' %}

{% block title %}Liste des évènements - Abeille Bouvillonne
{% endblock %}

{% block body %}
	<h2>Liste des évènements</h2>

	<table class="table">
		<thead>
			<tr>
				<th>Nom</th>
				<th>Date d'ouverture</th>
				<th>Date de fermeture</th>
				<th>Heures d'ouvertures</th>
				<th>Description</th>
				<th>Adresse</th>
				<th>Code Postal</th>
				<th>Ville</th>
				<th>Pays</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for event in events %}
				<tr>
					<td>{{ event.name }}</td>
					<td>{{ event.openDate ? event.openDate|date('d-m-Y') : '' }}</td>
					<td>{{ event.closeDate ? event.closeDate|date('d-m-Y') : '' }}</td>
					<td>{{ event.hours }}</td>
					<td>{{ event.description }}</td>
					<td>{{ event.adress }}</td>
					<td>{{ event.postalcode }}</td>
					<td>{{ event.city }}</td>
					<td>{{ event.country }}</td>
					<td>
						<a href="{{ path('events_show', {'id': event.id}) }}">
							<i class="fas fa-eye"></i>
						</a>
						<a href="{{ path('events_edit', {'id': event.id}) }}">
							<i class="fas fa-edit"></i>
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="12">Pas d'enregistrements</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('events_new') }}" class="btn">Créer nouveau</a>
{% endblock %}
