{% extends 'base.html.twig' %}

{% block title %}Events index
{% endblock %}

{% block body %}
	<h1>Events index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>OpenDate</th>
				<th>CloseDate</th>
				<th>Hours</th>
				<th>Description</th>
				<th>Adress</th>
				<th>Postalcode</th>
				<th>City</th>
				<th>Country</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for event in events %}
				<tr>
					<td>{{ event.name }}</td>
					<td>{{ event.openDate ? event.openDate|date('Y-m-d') : '' }}</td>
					<td>{{ event.closeDate ? event.closeDate|date('Y-m-d') : '' }}</td>
					<td>{{ event.hours }}</td>
					<td>{{ event.description }}</td>
					<td>{{ event.adress }}</td>
					<td>{{ event.postalcode }}</td>
					<td>{{ event.city }}</td>
					<td>{{ event.country }}</td>
					<td>
						<a href="{{ path('events_show', {'id': event.id}) }}">
							<i class="fas fa-eye"></i>
						</a>
						<a href="{{ path('events_edit', {'id': event.id}) }}">
							<i class="fas fa-edit"></i>
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="12">Pas d'enregistrements</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('events_new') }}" class="btn">Cr√©er nouveau</a>
{% endblock %}
