{% extends 'base.html.twig' %}

{% block title %}Mon profil - Abeille Bouvillone
{% endblock %}

{% block body %}
	<div class="container rounded bg-white mt-5 mb-5">
		<div class="row">
			<div class="col-md-5 border-right">
				<div class="p-3 py-5">
					<div class="d-flex justify-content-between align-items-center mb-3">
						<h4 class="text-right">Profil</h4>
					</div>
					<div class="row mt-2">
						<div class="col-md-12">
							<label class="labels">Email/Username :
								{{user.email}}</label>
						</div>
					</div>
					<div class="row mt-2">
						<div class="col-md-6">
							<label class="labels">Nom :
								{{user.name}}</label>
						</div>
						<div class="col-md-6">
							<label class="labels">Prénom :
								{{user.firstname}}</label>
						</div>
					</div>
					<div class="row mt-3">
						<div class="col-md-12">
							<label class="labels">Adresse :
								{{user.adress}}</label>
						</div>
						<div class="col-md-12">
							<label class="labels">Code Postal :
								{{user.postalcode}}</label>
						</div>
						<div class="col-md-12">
							<label class="labels">Ville :
								{{user.city}}</label>
						</div>
						<div class="col-md-12">
							<label class="labels">Pays :
								{{user.country}}</label>
						</div>
						<div class="col-md-12">
							<label class="labels">Téléphone :
								{{user.phone}}</label>
						</div>
						<div class="col-md-12">
							<label class="labels">Inscris depuis le
								{{user.registerdate ? user.registerdate|date('Y-m-d')}}</label>
						</div>
					</div>
					<div class="mt-5 text-center">
						<a href="{{path('edit_user')}}" class="btn ">Modifier le profil</a>
						<a href="{{path('edit_password')}}" class="btn ">Changer le mot de Passe</a>
					</div>
					<div class="mt-5 text-center">
						<a href="{{path('myorders')}}" class="btn">Mes commandes</a>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
