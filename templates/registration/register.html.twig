{% extends 'base.html.twig' %}

{% block title %}S'inscrire - Abeille Bouvillonne
{% endblock %}

{% block body %}

	<section class="container">
		{% for flashError in app.flashes('verify_email_error') %}
			<div class="alert alert-danger" role="alert">{{ flashError }}</div>
		{% endfor %}

		<h1>Register</h1>

		{{ form_start(registrationForm) }}
		{{ form_row(registrationForm.name, {
            label: 'Nom'
        }) }}
		{{ form_row(registrationForm.first_name, {
            label: 'Prénom'
        }) }}
		{{ form_row(registrationForm.adress, {
            label:'Rue'
    }) }}
		{{ form_row(registrationForm.postalcode, {
            label:'Code Postal'
    }) }}
		{{ form_row(registrationForm.city, {
            label:'Ville'
    }) }}
		{{ form_row(registrationForm.country, {
            label:'Pays'
    }) }}
		{{ form_row(registrationForm.phone, {
            label:'Téléphone'
    }) }}
		{{ form_row(registrationForm.email) }}
		{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
		{{ form_row(registrationForm.agreeTerms) }}

		<button type="submit" class="btn btn-warning">S'inscrire</button>
		{{ form_end(registrationForm) }}
	</section>
{% endblock %}
