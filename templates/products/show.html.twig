{% extends 'base.html.twig' %}

{% block title %}Products
{% endblock %}

{% block body %}
	<h1>Products</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Name</th>
				<td>{{ product.name }}</td>
			</tr>
			<tr>
				<th>Reference</th>
				<td>{{ product.reference }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ product.description }}</td>
			</tr>
			<tr>
				<th>Prix</th>
				<td>{{ product.prix }}</td>
			</tr>
			<tr>
				<th>Stock</th>
				<td>{{ product.stock }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td><img src="{{asset('images/' ~ product.image)}}" alt="{{ product.name }}"></td>
			</tr>
			<tr>
				<th>Poids</th>
				<td>{{ product.poids }}</td>
			</tr>
			{% if product.category == 'Miel' %}
				<tr>
					<th>Origine</th>
					<td>{{ product.origine }}</td>
				</tr>
				<tr>
					<th>Mise_en_pot</th>
					<td>{{ product.miseEnPot ? product.miseEnPot|date('Y-m-d') : '' }}</td>
				</tr>
			{% endif %}
			{% if product.category == 'Wraps' %}
				<tr>
					<th>Color</th>
					<td>{{ product.color }}</td>
				</tr>
			{% endif %}
			{% if product.category == 'Bougies' %}
				<tr>
					<th>Taille</th>
					<td>{{ product.taille }}</td>
				</tr>
			{% endif %}
			{% if product.category == 'Pains' %}
				<tr>
					<th>Dlc</th>
					<td>{{ product.dlc ? product.dlc|date('Y-m-d') : '' }}</td>
				</tr>
			{% endif %}


			<tr>
				<th>OnOrder</th>
				<td>{{ product.onOrder ? 'Yes' : 'No' }}</td>
			</tr>
		</tbody>
	</table>
	<form action="{{path('add_produit_panier', {'id':product.id})}}">
		<input type="number" id="quantity" name="quantity">
		<input type="submit" value="Ajouter au panier">
	</form>
	<a href="{{ path('products_index') }}">back to list</a>
	{% if is_granted('ROLE_ADMIN') %}
		<a href="{{ path('products_edit', {'id': product.id}) }}">edit</a>
	{% endif %}


	{{ include('products/_delete_form.html.twig') }}
{% endblock %}
