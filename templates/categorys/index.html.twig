{% extends 'base.html.twig' %}

{% block title %}Liste des Catégories - Abeille Bouvillonne
{% endblock %}

{% block body %}
	<h1>Categorys index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for category in categorys %}
				<tr>
					<td>{{ category.name }}</td>
					<td>
						<a href="{{ path('categorys_edit', {'id': category.id}) }}">
							<i class="fas fa-edit"></i>
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">Pas d'enregistrements</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('categorys_new') }}" class="btn">Créer nouveau</a>
{% endblock %}
